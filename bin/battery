#!/bin/bash
percent=$(acpi | cut -d ',' -f 2 | awk '{SUM+=$1}END{print int(SUM/NR)}')
case $(acpi | grep -c Charging) in
0)
	if [ $percent -gt 75 ];
	then
		icon="";
	elif [ $percent -gt 50 ];
	then 
		icon="";
	elif [ $percent -gt 25 ];
	then 
		icon="";
	else
		icon="";
	fi
	;;
1)
	icon="";
	;;
esac
echo $icon $percent | awk '{print $1, $2"%"}'
